<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 本地数据库jar包的位置，也可以在pom文件中指定具体位置-->
    <!--<classPathEntry location="/home/ypcfly/ypcfly/Maven/Repository/org/postgresql/postgresql/42.2.5/postgresql-42.2.5.jar"/>-->
    <classPathEntry location="/home/ypcfly/ypcfly/Maven/Repository/mysql/mysql-connector-java/8.0.12/mysql-connector-java-8.0.12.jar"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释-->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/spring?useSSL=false&amp;characterEncoding=utf8"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.ypc.mysql.json.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.ypc.mysql.json.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="book" domainObjectName="Book"/>
        <!--<table tableName="t_user" domainObjectName="User"/>-->
        <!--<table tableName="t_account" domainObjectName="Account"/>-->

    </context>
</generatorConfiguration>